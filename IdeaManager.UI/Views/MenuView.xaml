<UserControl x:Class="IdeaManager.UI.Views.MenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:IdeaManager.UI.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Background="#F0F0F0" Margin="10">
        <Button Content="Liste des idées" 
                Command="{Binding NavigateToIdeaListCommand}"
                Margin="0,0,10,0"
                Padding="15,8"
                Style="{StaticResource NavigationButtonStyle}"/>
        <Button Content="Proposer une idée" 
                Command="{Binding NavigateToIdeaFormCommand}"
                Padding="15,8"
                Style="{StaticResource NavigationButtonStyle}"/>
    </StackPanel>
</UserControl> 